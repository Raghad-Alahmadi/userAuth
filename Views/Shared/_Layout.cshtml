<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bookie</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UsersApp.styles.css" asp-append-version="true" />
    <style>
        /* Custom Styles */


        /* Navbar Styles */
        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            background-color: #5C4033; /* Dark brown background */
            border-bottom: 1px solid #ccc;
        }

        .navbar-brand {
            color: #fff; /* White text for the brand */
            font-size: 24px;
            font-weight: bold;
            text-transform: uppercase;
            text-decoration: none;
            letter-spacing: 1px;
            transition: color 0.3s ease;
            margin-left: 20px;
        }

            .navbar-brand:hover {
                color: #f0e7d4; /* Light color on hover */
            }

        .navbar-nav {
            display: flex;
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .navbar-nav .nav-item {
                margin-left: 20px;
            }

        .nav-link {
            color: #fff; /* White text for links */
            font-size: 16px;
            text-decoration: none;
            padding: 10px;
            border-radius: 5px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .nav-link:hover {
                background-color: #2f2f2f; /* Dark background on hover */
                color: #fff;
            }

            .nav-link:active {
                background-color: #1e1e1e; /* Even darker background when active */
            }

        /* Dropdown Menu Styles */
        .nav-item.dropdown {
            position: relative;
        }

        .dropdown-menu {
            display: none;
            position: absolute;
            top: 100%;
            left: 0;
            background-color: #f8f9fa;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            min-width: 180px;
            padding: 10px;
            border-radius: 5px;
        }

        .nav-item:hover .dropdown-menu {
            display: block;
        }

        .dropdown-menu a {
            color: #4d4d4d;
            font-size: 14px;
            padding: 8px 10px;
            text-decoration: none;
            transition: background-color 0.2s ease, color 0.2s ease;
        }

            .dropdown-menu a:hover {
                background-color: #eaeaea;
                color: #333;
            }

            .dropdown-menu a:active {
                background-color: #dcd5b5;
            }



    </style>
</head>
<body>
    <header>
        <nav>
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Bookie</a>
            <div class="navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link" href="#">More</a>
                        <div class="dropdown-menu">
                            <a href="#">About</a>
                            <a href="#">Services</a>
                            <a href="#">Contact</a>
                        </div>
                    </li>
                    <partial name="_LoginPartial" />
                </ul>
            </div>
        </nav>
    </header>

    @RenderBody()

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
